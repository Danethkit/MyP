<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:layout_width="369dp"
            android:layout_height="363dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.08" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
        <ImageView

                android:layout_width="match_parent"
                android:background="@drawable/messiarg"
                android:id="@+id/photo"
                android:layout_height="wrap_content">

        </ImageView>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/messilogo"
                android:id="@+id/photo1"
                />
        <ImageView
                android:layout_width="358dp"
                android:layout_height="367dp"
                android:background="@drawable/fcb"
                android:id="@+id/photo2"
        />


    </FrameLayout>

    <Button
            android:text="Next Screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Next" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.878"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.971"
            android:onClick="prev"

    />
    <Button
            android:text="Prev Screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.878"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/Next"
            app:layout_constraintHorizontal_bias="0.053"
            android:onClick="next"
    />

</android.support.constraint.ConstraintLayout>